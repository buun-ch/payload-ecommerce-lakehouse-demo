# shellcheck disable=all

ICEBERG_CATALOG_URL="http://lakekeeper.lakekeeper:8181/catalog"
ICEBERG_WAREHOUSE="default"
ICEBERG_NAMESPACE="ecommerce"

# Auth Method 1: OAuth2 Client Credentials (recommended for production/Airflow)
# Use this for service accounts with Keycloak/OIDC
OIDC_CLIENT_ID="lakekeeper-api"
OIDC_CLIENT_SECRET=""

# Auth Method 2: Static Bearer Token (legacy, for backward compatibility)
# Note: Tokens expire quickly, use OAuth2 for long-running processes
# ICEBERG_TOKEN=""

KEYCLOAK_TOKEN_URL="https://auth.yourdomain.com/realms/buunstack/protocol/openid-connect/token"

# Local Payload CMS configuration
PAYLOAD_CMS_URL="http://localhost:3000/api"

# For DNS resolution within the Kubernetes cluster: `telepresence connect`
# PAYLOAD_CMS_URL="http://payload-ecommerce-lakehouse-demo.default:3000/api"

PAYLOAD_CMS_TOKEN=""

WRITE_DISPOSITION="replace"
# WRITE_DISPOSITION="merge"

# For debugging
# PIPELINE_MODE="debug"
